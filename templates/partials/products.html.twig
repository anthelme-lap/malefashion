<!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">Best Sellers</li>
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        <li data-filter=".hot-sales">Hot Sales</li>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
            
                {# {% for new in isBest %}
                    <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix .best_sellers">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="{{vich_uploader_asset(new)}}">
                                <ul class="product__hover">
                                    <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                                    <li><a href="#"><img src="img/icon/compare.png" alt=""> <span>Compare</span></a></li>
                                    <li><a href="#"><img src="img/icon/search.png" alt=""></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6>{{new.name}} </h6>
                                <a href="#" class="add-cart">+ Add To Cart</a>
                                <div class="rating">
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <h5>${{new.price}}</h5>
                                <div class="product__color__select">
                                    <label for="pc-19">
                                        <input type="radio" id="pc-19">
                                    </label>
                                    <label class="active black" for="pc-20">
                                        <input type="radio" id="pc-20">
                                    </label>
                                    <label class="grey" for="pc-21">
                                        <input type="radio" id="pc-21">
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %} #}

                {% for new in isNewArrival %}
                    <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                        
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="{{vich_uploader_asset(new)}}">
                                <ul class="product__hover">
                                    <li><a href="{{path('app_product_details',{'id':new.id})}}">Detail</a></li>
                                    <li><a href="#"><img src="img/icon/heart.png" alt=""></a></li>
                                    <li><a href="#"><img src="img/icon/compare.png" alt=""> <span>Compare</span></a></li>
                                    <li><a href="{{path('app_product_details',{id:new.id})}} "><img src="img/icon/search.png" alt=""></a></li>
                                </ul>
                            </div>
                            <div class="product__item__text">
                                <h6>{{new.name}} </h6>
                                <a href="{{path('app_add_cart',{'id':new.id})}} " class="add-cart">+ Add To Cart</a>
                                
                                <div class="rating">
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <h5>{{(new.price)/100}}Fr</h5>
                                <div class="product__color__select">
                                    <span style:"text-decoration: line-through">70.00</span>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                {% endfor %}

                {% for new in isHot %}
