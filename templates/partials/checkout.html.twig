<!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                {{form_start(checkout, {action: path('app_checkout_confirm')}) }}
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <h6 class="coupon__code"><span class="icon_tag_alt"></span> Avez-vous un coupon? <a href="#">Cliquez
                            ici</a> Entrez votre code</h6>
                            <h6 class="checkout__title">Adresse Details</h6>
                        
                                <div class="row">
                                
                                    <div class="col-md-8">
                                        <h4>Adresse de livraison</h4>
                                        <div class="checkout__inpu" style="border:solid 5px #f3f2ee;  padding:10px; border-radius:10px"> 
                                            
                                            {{form_widget(checkout.adresse) | replace({'[spr]':'<br>'}) | raw }}
                                        </div>
                                        <a href="{{path('app_adresse_new')}} " class="btn btn-primary btn-block">Ajouter une nouvelle adresse</a>
                                        <div class="checkout__inpu" style="border:solid 5px #f3f2ee; margin-bottom:70px; padding:10px; border-radius:10px"> 
                                            <h4>Details</h4>

                                            {{form_widget(checkout.moreInformation)}}
                                        </div>
                                    </div>
                                    {# <div class="col-md-6">

                                        
                                    </div> #}
                                
                                </div>
                            
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4 class="order__title">Votre Commande</h4>
                                <div class="checkout__order__products">Produit <span>Total</span></div>
                                {% set Subtotal = 0 %}
                                {% for item in cart %} 
                                    {% set Subtotal = Subtotal + (item.quantity * item.product.price)/100 %} 
                                    <ul class="checkout__total__products">
                                        <li>{{loop.index}}. {{item.product.name}} x {{item.quantity}} <span>{{item.product.price/100}}Fr</span> </li>
                                    </ul>
                                {% endfor %}
                                    <ul class="checkout__total__all">
                                        <li>Subtotal <span>{{Subtotal}} Fr</span></li>
                                        <li>Total <span>{{Subtotal}} Fr</span></li>
                                    </ul>
                                
                                <button type="submit" class="site-btn">VÃ©rification</button>
                            </div>
                        </div>
                    </div>
                {{form_end(checkout)}}
            </div>
        </div>
    </section>
    <!-- Checkout Section End -->