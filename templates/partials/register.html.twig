 <style>
    .bg-register-image{
        background: url('img/banner/banner-2.jpg');
    }
    form.user .form-control-user {
    font-size: 0.8rem;
    border-radius: 10rem;
    padding: 1.5rem 1rem;
    }
    form.user .btn-user {
    font-size: 0.8rem;
    border-radius: 10rem;
    padding: 0.75rem 1rem;
    }

</style>
 <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            {% for flash_error in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Cr√©er un compte</h1>
                            </div>
                            {{ form_start(registrationForm, {'attr': {'class':'user'}}) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_row(registrationForm.lastname) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_row(registrationForm.firstname) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.phone) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_row(registrationForm.password) }}
                                    </div>
                                    {# <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user"
                                            id="exampleRepeatPassword" placeholder="Repeat Password">
                                    </div> #}
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Inscription</button>
                                
                            {{ form_end(registrationForm) }}

                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="login.html">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>